<p id="notice"><%= notice %></p>

<h1>Activities</h1>

<table>
  <thead>
    <tr>
      <th>活动ID</th>
      <th>发起人ID</th>
      <th>活动状态</th>
      <th>活动类别</th>
      <th>活动标题</th>
      <th>活动地点</th>
      <th>开始时间</th>
      <th>报名截止时间</th>
      <th>活动人数</th>
      <th>活动时长</th>
      <th>是否私密</th>
      <th>私密活动密码</th>
      <th>活动简介</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id %></td>
        <td><%= activity.UserId %></td>
        <td><%= activity.AcStatus %></td>
        <td><%= activity.AcClass %></td>
        <td><%= activity.AcTitle %></td>
        <td><%= activity.AcSitu %></td>
        <td><%= activity.AcStartTime.strftime('%Y-%m-%d %H:%M:%S')%></td>
        <td><%= activity.AcEndTime.strftime('%Y-%m-%d %H:%M:%S') %></td>
        <td><%= activity.AcCount %></td>
        <td><%= activity.AcDura %></td>
        <td><%= activity.AcIsPra %></td>
        <td><%= activity.AcPass %></td>
        <td><%= activity.AcIntro %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <%# 下面的方法废弃 %>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


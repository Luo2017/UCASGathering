<div class="container">
<div class="row">
<div class="col-md-8 activity-show-card activity-show-card-3">

<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="act_info">
      <h1><%= link_to @activity.AcTitle, @activity %></h1>
      <span><%= @activity.followers.count %>个成员</span>
    </section>
    <section class="stats_acticity">
      <%= render 'share/stats_activity' %>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render '/layouts/activities/header'%>
    <% if @users.any? %>
      <ul class="users following">
        <%= render @users %>
      </ul>
    <% end %>
  </div>
</div>

</div>
</div>
</div>

<%=render 'layouts/activities/self_footer'%>
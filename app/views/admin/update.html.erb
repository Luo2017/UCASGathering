<style type="text/css">
  /*包含以下四种的链接*/
  a {
    text-decoration: none;
    color: #000000;
  }

  /*正常的未被访问过的链接*/
  a:link {
    text-decoration: none;
  }

  /*已经访问过的链接*/
  a:visited {
    text-decoration: none;
  }

  /*鼠标划过(停留)的链接*/
  a:hover {
    text-decoration: none;
    background: none;
  }

  /* 正在点击的链接*/
  a:active {
    text-decoration: none;
  }
</style>

<div style="width: 60%;margin: 0 auto">
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark" style="margin-bottom: -1px">
    <!-- Brand/logo -->
    <div   style="margin-right: 30px;text-align: center"><%= image_tag "logo.png",:width => 50 %></div>
    <!-- Links -->
    <ul class="navbar-nav">
      <li class="nav-item" style="margin-right: 30px">
        <a class="nav-link" href="/admin/show" style="font-size: 14px;text-align: center"><span class="glyphicon glyphicon-user"></span>&nbsp;&nbsp;用户管理</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="#" style="font-size: 14px;color: #FFFFFF"><span class="glyphicon glyphicon-list-alt"></span>&nbsp;&nbsp;活动管理</a>
      </li>
    </ul>
  </nav>
  <table class="table table-hover" style="margin-top: 0px">
    <tr style="font-weight: bold">
      <td>活动标题</td>
      <td>活动时间</td>
      <td>活动地点</td>
      <td>活动分类</td>
      <td>活动人数</td>
    </tr>
      <tr>
        <td><%= @activity.AcTitle %></td>
        <td><%= @activity.AcStartTime %></td>
        <td><%= @activity.AcSitu %></td>
        <td><%= @activity.AcClass %></td>
        <td><%= @activity.AcCount %></td>
      </tr>
  </table>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        活动简介
      </h3>
    </div>
    <div class="panel-body">
      <%= @activity.AcIntro %>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">
        当前参加人员
      </h3>
    </div>
    <div class="panel-body">
      <%= @activity.AcUsersGroup %>
    </div>
  </div>
  <div></div>
  <span id="success" style="font-weight: bold;font-size: 16px"> <span class="glyphicon glyphicon-ok"></span>&nbsp;<%= link_to '审核通过', :action => "activity_allow", data: {activity: @activity.id} %></span>
  <span id="object" style="font-weight: bold;font-size: 16px;margin-left: 30%"><span class="glyphicon glyphicon-remove"></span>&nbsp;<%= link_to '审核失败', :action => "activity_fail", data: { activity: @activity.id} %></span>
  <span id="back'" style="font-weight: bold;font-size: 16px;margin-left: 30%"><span class="glyphicon glyphicon-arrow-left"></span>&nbsp;<a href="/admin/activityshow">返回</a></span>
</div>
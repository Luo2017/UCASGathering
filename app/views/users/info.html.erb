<% provide(:title, '完善资料') %>





<%= form_for(:user, url: info_path,:multipart => true)  do |f| %>   
  
  <div style="margin: auto;text-align: center;margin-top: 100px"><input placeholder="请输入密码" type="text" name="user[password]" id="user_password" style="text-align: center;width:60%;height:100px;font-size: 40px;BORDER-TOP-STYLE: none; BORDER-RIGHT-STYLE: none; BORDER-LEFT-STYLE: none; BORDER-BOTTOM-STYLE: solid"></div>
  <div style="margin: auto;text-align: center;margin-top: 20px"><input placeholder="请重复输入密码" type="text" name="user[password_confirmation]" id="user_password_confirmation" style="text-align: center;width:60%;height:100px;font-size: 40px;BORDER-TOP-STYLE: none; BORDER-RIGHT-STYLE: none; BORDER-LEFT-STYLE: none; BORDER-BOTTOM-STYLE: solid"></div>
  <div style="margin: auto;text-align: center;margin-top: 20px"><input placeholder="请输入昵称" type="text" name="user[usernickname]" id="user_usernickname" style="text-align: center;width:60%;height:100px;font-size: 40px;BORDER-TOP-STYLE: none; BORDER-RIGHT-STYLE: none; BORDER-LEFT-STYLE: none; BORDER-BOTTOM-STYLE: solid"></div>
  <div style="margin: auto;text-align: center;margin-top: 20px"><input placeholder="请输入真实姓名" type="text" name="user[username]" id="user_username" style="text-align: center;width:60%;height:100px;font-size: 40px;BORDER-TOP-STYLE: none; BORDER-RIGHT-STYLE: none; BORDER-LEFT-STYLE: none; BORDER-BOTTOM-STYLE: solid"></div>
  <div style="margin: auto;text-align: center;margin-top: 20px;font-size: 40px;"><input type="radio" value="女" name="user[usersex]" id="user_usersex_女" checked="checked"  style="width:10%;height:40px;">女
      <input type="radio" value="男" name="user[usersex]" id="user_usersex_男" style="width:10%;height:40px;">男</div>
  <div style="margin: auto;text-align: center;margin-top: 20px;font-size: 40px;"><input  placeholder="生日格式：2020-06-01" type="text" name="user[userbirth]" id="user_userbirth" pattern="\d{4}-\d{2}-\d{2}"  style="text-align: center;width:60%;height:100px;font-size: 40px;BORDER-TOP-STYLE: none; BORDER-RIGHT-STYLE: none; BORDER-LEFT-STYLE: none; BORDER-BOTTOM-STYLE: solid"></div>
  <div style="margin: auto;text-align: center;margin-top: 20px"><input placeholder="请输入学院" type="text" name="user[usercollege]" id="user_usercollege" style="text-align: center;width:60%;height:100px;font-size: 40px;BORDER-TOP-STYLE: none; BORDER-RIGHT-STYLE: none; BORDER-LEFT-STYLE: none; BORDER-BOTTOM-STYLE: solid"></div>
  <div style="margin: auto;text-align: center;margin-top: 20px"><input placeholder="请输入学号" type="text" name="user[userid]" id="user_userid" style="text-align: center;width:60%;height:100px;font-size: 40px;BORDER-TOP-STYLE: none; BORDER-RIGHT-STYLE: none; BORDER-LEFT-STYLE: none; BORDER-BOTTOM-STYLE: solid"></div>
  <div style="margin: auto;text-align: center;margin-top: 20px"><input placeholder="向别人展示一下自己吧~" type="text" name="user[userintro]" id="user_userintro" style="text-align: center;width:60%;height:100px;font-size: 40px;BORDER-TOP-STYLE: none; BORDER-RIGHT-STYLE: none; BORDER-LEFT-STYLE: none; BORDER-BOTTOM-STYLE: solid"></div>    
  <div style="margin: auto;text-align: center;margin-top: 20px"><input type="submit" name="commit" value="完成" data-disable-with="完成" style="border-radius: 20px; background-color: white; color: #09a7c6;border: 2px solid #09a7c6;width:60%;font-size: 40px;height:100px;"></div>
  

<% end %>


    

<% flash.each do |key, value| %>
<div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
